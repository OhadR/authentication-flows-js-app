<%- include('head.ejs') %>

<h1>Set New Password</h1>

<% if (err_msg) { %>
    <div style="margin-top:  25px ;position: relative; color: red; font:15px">
        <span style="font-weight:bold"><%= err_msg %></span>
    </div>
<% } %>

<form method="post" action="/setNewPassword">
    <p>
        <label>password:</label>
        <input type="password" name="password">
    </p>
    <p>
        <label>Retype Password:</label>
        <input type="password" name="retypedPassword">
    </p>
    <p>
        <input type="hidden" name="enc" value=<%= enc %> >
    </p>
    <p>
        <input type="submit" value="Submit">
    </p>
</form>

<%- include('foot.ejs') %>